{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./renderer/*"],
      "@shared/*": ["./shared/*"],
      "@main/*": ["./main/*"]
    }
  },
  "include": [
    "main/**/*",
    "renderer/**/*",
    "preload/**/*",
    "shared/**/*",
    "__test__/**/*",
    ".storybook/**/*"
  ]
}
